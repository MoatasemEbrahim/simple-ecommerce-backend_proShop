{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["src/lib/types.d.ts"],
  },

  "ts-node": {
    "files": true
  },
  "files": [
    "src/index.ts",
    "src/lib/types.d.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]

}